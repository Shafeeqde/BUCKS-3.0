rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access to all documents.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read from collections.
    // This is a reasonable default, but you might want to make it more specific.
    // e.g. allow read: if request.auth.uid == resource.data.userId;
    match /{collection}/{docId} {
      allow read: if request.auth != null;
    }

    // Explicitly deny all client-side writes. This is a crucial security rule.
    // All data modifications MUST go through your secure backend APIs,
    // which use the Admin SDK and bypass these rules.
    allow write: if false;
  }
}
