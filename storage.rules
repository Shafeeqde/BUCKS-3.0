
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all uploaded files.
    // This is simple for now. For a production app, you'd want more specific rules.
    match /uploads/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'uploads' folder.
    // For better security, you might restrict this further, e.g., by user ID.
    // match /uploads/{userId}/{allPaths=**} {
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
    match /uploads/{allPaths=**} {
        allow write: if request.auth != null;
    }
  }
}
